    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run dev",
            "name": "Run dev",
            "request": "launch",
            "type": "node-terminal",
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Docker: Attach to Node",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",

            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/vlog",

            "protocol": "inspector",
            "restart": true,
        }
    ]
}