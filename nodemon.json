{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".gitignore",
    ".eslintrc",
    "node_modules/**/node_modules",
    "logs"
  ],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "watch": [
    "./"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}